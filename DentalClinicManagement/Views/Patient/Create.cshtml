@model DentalClinicManagement.Models.Patient

<h2>Yeni Hasta Ekle</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Ad:</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Soyad:</label>
        <input asp-for="LastName" required/>
    </div>
    <div>
        <label>Doğum Tarihi:</label>
        <input asp-for="BirthDate" required/>
    </div>
    <div>
        <label>Telefon Numarası:</label>
        <input asp-for="PhoneNumber" required/>
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" required/>
    </div>
    <div>
        <label>Adres:</label>
        <input asp-for="Address" required/>
    </div>
    <button type="submit">Ekle</button>

</form>