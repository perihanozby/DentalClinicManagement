@model IEnumerable<DentalClinicManagement.Models.Patient>

<h2>Hasta Listesi</h2>
<a asp-action="Create" style="color:blue">Yeni Hasta Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>Telefon Numarası</th>
            <th>Email</th>
            <th>Adres</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody style="color:darkred">
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.BirthDate</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.Email</td>
                <td>@patient.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@patient.Id" style="color:green">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" style="color:red">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
