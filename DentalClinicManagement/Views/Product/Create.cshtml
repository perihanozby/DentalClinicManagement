@model DentalClinicManagement.Models.Product

<h2>Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Ad:</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Miktar:</label>
        <input asp-for="Quantity" required />
    </div>
    <div>
        <label>Fiyat:</label>
        <input asp-for="Price" required />
    </div>
    <div>
        <label>Tedarikçi:</label>
        <input asp-for="Supplier" required />
    </div>
    
    <button type="submit">Ekle</button>

</form>