@model IEnumerable<DentalClinicManagement.Models.Doctor>

<h1>Doktor Listesi</h1>
<a asp-controller="Doctor" asp-action="Create">Yeni Doktor Oluştur</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Uzmanlık</th>
            <th>Telefon</th>
            <th>E-posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specialty</td>
                <td>@doctor.PhoneNumber</td>
                <td>@doctor.Email</td>
                <td>
                    <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@doctor.Id">Düzenle</a> |
                    <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
