@model DentalClinicManagement.Models.Doctor

<h2>Doktor Sil</h2>

<h3>Bu doktoru silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName (@Model.Specialty)</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
