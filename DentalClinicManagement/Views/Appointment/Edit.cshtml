@model DentalClinicManagement.Models.Appointment

<h2>Randevu Bilgilerini Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Date" class="control-label">Tarih</label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientId" class="control-label">Hasta ID</label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId" class="control-label">Doktor ID</label>
        <input asp-for="DoctorId" class="form-control" />
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label">Notlar</label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <input type="submit" value="Güncelle" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</form>
