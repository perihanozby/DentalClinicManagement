@model DentalClinicManagement.Models.Appointment

<h1>Yeni Randevu Oluştur</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Patient"></label>
        <input asp-for="Patient" class="form-control" />
        <span asp-validation-for="Patient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctor"></label>
        <input asp-for="Doctor" class="form-control" />
        <span asp-validation-for="Doctor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
