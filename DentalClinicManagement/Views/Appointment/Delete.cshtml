@model DentalClinicManagement.Models.Appointment

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>@Model.Patient.FirstName @Model.Patient.LastName's appointment with Dr. @Model.Doctor.FirstName @Model.Doctor.LastName on @Model.Date</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
